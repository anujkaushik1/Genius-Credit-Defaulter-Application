<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userprofile"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#0066FF">
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="-200dp"
        android:layout_marginRight="70dp"
        android:alpha="0.6"
        android:background="@drawable/customer" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/profilename"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:layout_gravity="center"

        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="Legal name"

                    android:textColor="#696969"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/legalname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"

                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="State Jurisdiction"
                    android:textColor="#505050"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/statejurisdiction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="Nature Business Activity"
                    android:textColor="#505050"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/naturebusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="Trade Name"
                    android:textColor="#505050"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tradename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="State"
                    android:textColor="#505050"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="City"
                    android:textColor="#505050"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="Address"
                    android:textColor="#505050"
                    android:textSize="16dp" />

                <TextView

                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="Email"
                    android:textColor="#505050"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/reportdefaulterenail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="4dp"
                    android:text="Mobile Number"
                    android:textColor="#505050"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/reportdefaultermobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:inputType="phone"

                    android:maxLength="10"
                    android:textColor="#505050"
                    android:textSize="16dp" />




            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <Button
        android:id="@+id/changepassword"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#0066FF"
        android:text="Change Password"
        android:textColor="#FFFF"

        android:textSize="16dp" />


</LinearLayout>