<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/corner"

        android:iconifiedByDefault="false"
        android:id="@+id/searchreportdefaulter">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search by GST number"
            android:layout_marginLeft="-310dp"
            android:textSize="15dp"
            android:id="@+id/textviewsearchgst"
         />

    </SearchView>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardviewreportdeffaulter"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="Legal name"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="123dp"
                    android:layout_marginTop="-22dp"
                    android:textColor="#FF0000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/legalname"
                    android:textSize="16dp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="State Jurisdiction"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="163dp"
                    android:layout_marginTop="-22dp"
                    android:textColor="#FF0000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:id="@+id/statejurisdiction"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="Nature Business Activity"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="212dp"
                    android:layout_marginTop="-22dp"
                    android:textColor="#FF0000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/naturebusiness"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="Trade Name"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" *"
                    android:layout_marginLeft="123dp"
                    android:layout_marginTop="-22dp"
                    android:textColor="#FF0000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tradename"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="State"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="-22dp"
                    android:textColor="#FF0000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/state"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="City"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="-30dp"
                    android:textColor="#FF0000"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/city"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="Address"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="-22dp"
                    android:textColor="#FF0000"/>
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/address"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="Enter a valid email address"
                    android:id="@+id/requiredemail"
                    android:textColor="#FF0000"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="Email"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="-22dp"
                    android:textColor="#FF0000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/reportdefaulterenail"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:inputType="textEmailAddress"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="Please enter mobile number"
                    android:id="@+id/requiredmobile"
                    android:textColor="#FF0000"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:layout_marginLeft="35dp"
                    android:text="Mobile Number"
                    android:textColor="#00008B"
                    android:layout_marginTop="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="-22dp"
                    android:textColor="#FF0000"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:textSize="16dp"
                    android:textColor="#000000"

                    android:maxLength="10"
                    android:id="@+id/reportdefaultermobilenumber"
                    android:inputType="phone"/>

                <Button
                    android:layout_width="300dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:text="Done"
                    android:textSize="22dp"
                    android:id="@+id/reportdefaulterdone"
                    android:background="#0066FF"

                    android:textColor="#FFFF"/>


            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>




</LinearLayout>