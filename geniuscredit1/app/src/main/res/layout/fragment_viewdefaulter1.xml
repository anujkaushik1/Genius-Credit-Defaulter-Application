<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".viewdefaulter"
    android:orientation="vertical">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/corner"

        android:iconifiedByDefault="false"
        android:id="@+id/searchviewdefaulter">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search by GST number"
            android:layout_marginLeft="-310dp"
            android:textSize="15dp"
            android:id="@+id/textviewsearchgst"
            />

    </SearchView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardviewviewdeffaulter"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="35dp"
                    android:text="GST Number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/gstnumber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="35dp"
                    android:text="Trade Name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/tradename"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="35dp"
                    android:text="Due Amount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/dueamount"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="35dp"
                    android:text="Legal Name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-20dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/legalname"/>
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="35dp"
                    android:text="Defaulter Submitted Date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-40dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/defaultersubmitteddate"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="35dp"
                    android:text="Balance"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-23dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/balance"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:text="State"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-23dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/state"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:text="Address"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-23dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/address"/>
                <TextView
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:text="Nature Business Activity"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-23dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/naturebusiness"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:text="Legal Case"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-23dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/legalcase"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="35dp"
                    android:text="Due Date"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#00008B"
                    android:layout_marginTop="-23dp"
                    android:layout_marginLeft="200dp"

                    android:id="@+id/duedate"/>
                <Button
                    android:layout_width="280dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="center"
                    android:text="Done"
                    android:textSize="20dp"
                    android:id="@+id/done"
                    android:background="#0066FF"

                    android:textColor="#FFFF"/>

            </LinearLayout>



        </ScrollView>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/cardviewnodataavailable">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No data available"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>