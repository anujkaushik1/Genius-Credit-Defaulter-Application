<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardviewviewwallet"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/rupees"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S.NO :"
                android:textSize="17dp"
                android:layout_marginTop="-25dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:id="@+id/sno"
                android:textSize="17dp"

                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="-22dp"
                />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----------------------------------------------------------------------------------------"
                android:alpha="0.5"/>


          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Date :"
              android:textStyle="bold"
              android:textSize="15dp"
              android:layout_marginTop="05dp"
              android:textColor="#000000"
              android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
               android:id="@+id/date"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Particulars :"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Defaulter cashback for-"
                android:alpha="0.6"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:id="@+id/particular"
                android:alpha="0.6"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Amount :"
                android:textStyle="bold"
               android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:alpha="0.6"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:id="@+id/creditamount"
                android:textSize="15dp"
                android:alpha="0.6"
                android:textColor="#000000"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expired Date :"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05-04-2022"
                android:alpha="0.6"
                android:textSize="15dp"
                android:textColor="#000000"
                android:id="@+id/expireddate"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance :"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:alpha="0.6"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.6"
                android:id="@+id/balance"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="-20dp"/>




        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>